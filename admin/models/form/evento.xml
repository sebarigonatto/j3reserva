<?xml version="1.0" encoding="UTF-8"?>
<form>
<fieldset>
<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
readonly="true" class="readonly"
description="JGLOBAL_FIELD_ID_DESC"/>

<field name="titulo" type="text" class="inputbox" size="40"
       label="COM_RESERVA_FIELD_TITULO"description="COM_RESERVA_FIELD_TITULO_DESC" required="true" />

<field name="inicio" type="calendar" required="true"
label="COM_RESERVA_FIELD_INICIO_LABEL" description="COM_RESERVA_FIELD_INICIO_DESC"
class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

<field name="fin" type="calendar"
label="COM_RESERVA_FIELD_FIN_LABEL" description="COM_RESERVA_FIELD_FIN_DESC"
class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

<field name="lugar" type="text" class="inputbox"
size="50" label="COM_RESERVA_FIELD_LUGAR_LABEL"
description="COM_RESERVA_FIELD_LUGAR_DESC" required="true" />

<field name="descripcion" type="textarea" class="inputbox" rows="3" cols="30"
       label="COM_RESERVA_FIELD_DESCRIPCION" description="COM_RESERVA_FIELD_DESCRIPCION_DESC" />

<field name="tel" type="tel"
id="phone" description="COM_RESERVA_FIELD_TEL_DESC" filter="string"
label="COM_RESERVA_FIELD_TEL_LABEL"  size="30" required="true" validate="tel"/>

<field name="email" type="email" 
class="inputbox" description="COM_RESERVA_FIELD_MAIL_DESC" label="JGLOBAL_EMAIL"
required="true" size="30" validate="email"/>

<field name="state" type="list"
label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
class="inputbox small" size="1" default="1" >
<option value="1">JPUBLISHED</option>
<option value="0">JUNPUBLISHED</option>
<option value="2">JARCHIVED</option>
<option value="-2">JTRASHED</option>
</field>

</fieldset>
</form>