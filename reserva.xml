<description>COM_RESERVA_XML_DESCRIPTION</description>

<scriptfile>script.php</scriptfile>

<install>
<sql>
    <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
</sql>
</install>
<uninstall>
<sql>
    <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
</sql>
</uninstall>
<files folder="site">
<filename>index.html</filename>
</files>
<administration>
<menu img="class:categories">COM_RESERVA_MENU</menu>
<submenu>
		<menu link="option=com_reserva"
		view="reservas" img="class:generic"
		alt="Reserva/Reservas">com_reserva_reservas</menu> 
		<menu 
			link="option=com_reserva&amp;view=semanal"
			view="semanal" img="class:categories"
			alt="Reserva/Semanal">com_reserva_semanal
		</menu>
		<menu 
			link="option=com_reserva&amp;view=diaria"
			img="class:generic"
			alt="Folio/Diaria">com_reserva_diaria
		</menu>
                
                <menu 
			link="option=com_reserva&amp;view=estadistica"
			img="class:generic"
			alt="Folio/Estadistica">com_reserva_estadistica
		</menu>
                
	</submenu>
<files folder="admin">

    <filename>index.html</filename>
    <filename>access.xml</filename>
    <filename>config.xml</filename>
    <filename>controller.php</filename>
    <filename>reserva.php</filename>

    <folder>controllers</folder>
    <folder>helpers</folder>
    <folder>models</folder>
    <folder>sql</folder>
    <folder>tables</folder>
    <folder>views</folder>
</files>
<languages folder="admin">
    <language tag="en-GB">language/en-GB/es-ES.com_reserva.ini</language>
    <language tag="en-GB">language/en-GB/es-ES.com_reserva.sys.ini</language>
</languages>
</administration>
</extension>